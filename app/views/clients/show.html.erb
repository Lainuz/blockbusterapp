<p style="color: green"><%= notice %></p>

<div>
<ul>
<li>Cliente: <%= @client.name %></li>
<li>Edad: <%= @client.age %></li>
<% if @client.movies.last %>
<li>Pelicula: <%= @client.movies.last %></li>
<% else %>
<li>Sin arriendo </li>
<%end%>
</ul>
</div>


<div>
  <%= link_to "Editar cliente", edit_client_path(@client), class:"btn btn-warning btn-sm" %> |
  <%= link_to "Volver a lista de clientes", clients_path, class:"btn btn-primary btn-sm" %>
</div>

<div class="d-flex my-3">
<%= image_tag ("cruz.svg") %>
<%= button_to "Eliminar Cliente" , @client, method: :delete, class:"btn btn-danger" %>
</div>